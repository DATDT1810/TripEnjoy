@page "{id:int}"
@model TripEnjoy.Presentation.Razor.Pages.Booking.BookingDetailsModel
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Booking Details</h2>

    @if (Model.Booking != null)
    {
        <div class="card mb-4">
            <div class="card-header">Booking Information</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Check-in Date</dt>
                    <dd class="col-sm-8">@Model.Booking.CheckinDate.ToString("MM/dd/yyyy")</dd>

                    <dt class="col-sm-4">Check-out Date</dt>
                    <dd class="col-sm-8">@Model.Booking.CheckoutDate.ToString("MM/dd/yyyy")</dd>

                    <dt class="col-sm-4">Booking Status</dt>
                    <dd class="col-sm-8">@Model.Booking.BookingStatus</dd>

                    <dt class="col-sm-4">Total Price</dt>
                    <dd class="col-sm-8">@Model.Booking.BookingTotalPrice.ToString("#,##0 VND")</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Room Information</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Room Title</dt>
                    <dd class="col-sm-8">@Model.Booking.Room.RoomTitle</dd>

                    <dt class="col-sm-4">Room Quantity</dt>
                    <dd class="col-sm-8">@Model.Booking.RoomQuantity</dd>

                    <dt class="col-sm-4">Room Price per Night</dt>
                    <dd class="col-sm-8">@Model.Booking.Room?.RoomPrice.ToString("#,##0 VND")</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">Account Information</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Customer Name</dt>
                    <dd class="col-sm-8">@Model.Booking.Account?.AccountFullname</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Booking.Account?.AccountEmail</dd>

                    <dt class="col-sm-4">Phone Number</dt>
                    <dd class="col-sm-8">@Model.Booking.Account?.AccountPhone</dd>
                </dl>
            </div>
        </div>

        <a asp-page="/User/ViewProfile" class="btn btn-primary mt-3">Back to Profile</a>
    }
    else
    {
        <p class="text-muted">Booking details not found.</p>
    }
</div>

@section Styles {
    <style>
        /* Add padding to the details list */
        dl.row dt {
            font-weight: bold;
        }
    </style>
}
