@page
@model TripEnjoy.Presentation.Razor.Pages.Partner.DashboardModel
@{
    Layout = "~/Pages/Shared/_LayoutPartner.cshtml";
}

<h2>Booking</h2>

<div class="table-responsive">
    <table id="bookingTable" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Email </th>
                <th>Customer Name</th>
                <th>Phone number</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Status</th>
                <th>Quantity</th>
                <th>Hotel</th>
                <th>Room</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @{
                int value = 1;
            }
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@value</td>
                    <td>@booking.AccountEmail</td>
                    <td>@booking.AccountFullName</td>
                    <td>@booking.AccountPhoneNumber</td>
                    <td>@booking.CheckinDate.ToString("dd/MM/yyyy")</td>
                    <td>@booking.CheckoutDate.ToString("dd/MM/yyyy")</td>
                    <td>@booking.BookingStatus</td>
                    <td>@booking.RoomQuantity</td>
                    <td>@booking.HotelName</td>
                    <td>@booking.RoomName</td>
                    <td>@booking.BookingTotalPrice.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                </tr>
                value++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#bookingTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "pageLength": 10,
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ bản ghi mỗi trang",
                    "zeroRecords": "Không tìm thấy kết quả",
                    "info": "Hiển thị trang _PAGE_ của _PAGES_",
                    "infoEmpty": "Không có bản ghi",
                    "infoFiltered": "(lọc từ _MAX_ bản ghi)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                }
            });
        });
    </script>
}