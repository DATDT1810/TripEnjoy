@page
@model TripEnjoy.Presentation.Razor.Pages.Partner.RoomDashboardModel
@{
    Layout = "~/Pages/Shared/_LayoutPartner.cshtml";
}


<h2 class="my-4">Room</h2>

<div class="table-responsive">
    <table id="roomTable" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead class="thead-dark">
            <tr>
                <th>STT</th>
                <th>Hotel Name</th>
                <th>Room Name</th>
                <th>Room Typed</th>
                <th>Room quantity</th>
                <th>Status</th>
                <th>Price</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@index</td>
                    <td>@room.HotelName</td>
                    <td>@room.RoomTitle</td>
                    <td>@room.RoomTypeId</td> <!-- Loại phòng có thể dùng ID hoặc chuyển đổi sang tên loại -->
                    <td>@room.RoomQuantity</td>
                    <td>@room.RoomStatusID</td> <!-- Chuyển đổi trạng thái phòng để dễ hiểu hơn -->
                    <td>@room.RoomPrice.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                    <td>@room.RoomDescription</td>
                    <td>
                        <a class="btn btn-primary" asp-page="/Partner/UpdateRoom" asp-route-id="@room.RoomId">Update</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#roomTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "pageLength": 10,
            "language": {
                "lengthMenu": "Hiển thị _MENU_ bản ghi mỗi trang",
                "zeroRecords": "Không tìm thấy kết quả",
                "info": "Hiển thị trang _PAGE_ của _PAGES_",
                "infoEmpty": "Không có bản ghi",
                "infoFiltered": "(lọc từ _MAX_ bản ghi)",
                "search": "Tìm kiếm:",
                "paginate": {
                    "first": "Đầu",
                    "last": "Cuối",
                    "next": "Sau",
                    "previous": "Trước"
                }
            }
        });
    });
</script>


