<Window x:Class="TripEnjoy.Presentation.WPF.Views.Admin.UpdateCategoryWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripEnjoy.Presentation.WPF.Views.Admin"
        mc:Ignorable="d"
        Title="UpdateCategoryWindows" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Name" Margin="10,10,0,5"/>
        <TextBox Width="250" Text="{Binding Category.CategoryName, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Status" Margin="10,10,0,5"/>
        <TextBox Width="250" Text="{Binding Category.CategoryStatus, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="75" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="Cancel" Width="75" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
